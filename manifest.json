{
  "manifest_version": 3,
  "name": "Kyna Telegram Parser",
  "version": "1.0.0",
  "description": "Automatically extracts and parses Telegram messages with user profiles to Kyna API",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://parser.kyna.one/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://web.telegram.org/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
